@import "~stylus/color.styl"

.song
  display flex
  align-items center
  padding 10px 5px
  transition 0.1s background-color
  cursor pointer
  border 1px solid transparent
  border-bottom 1px solid #696969
  min-height 65px
  .imageWrapper
    max-width 50px
    height 50px
    img
      width 100%
      height 100%
  .details
    flex 1
    overflow hidden
    padding-left 5px
    .songName
      text-overflow ellipsis
      overflow hidden
    .albumArtist
      text-overflow ellipsis
      overflow hidden
      font-size 12px
      color #878787
      .gap
        margin 0 2px
  &:hover
    border  1px solid linkHoverColor
  &.playing
    background-color #4c4c4c