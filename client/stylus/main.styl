@import "reset"
@import "sizes"
@import "color.styl"

html
  height 100%
  #root
    height 100%
    overflow-x hidden
  body
    font-family 'Open Sans', Helvetica, Arial, sans-serif
    font-weight normal
    font-size 16px
    height 100%
    background-color bodyBackgroundColor
    color #e1e1e1

a
  text-decoration none
  cursor pointer
  color inherit
  &.disabled
   pointer-events none
  &:hover
    color linkHoverColor/* !important*/

:global
  //Pages
  @import "./pages/Playlists"
  @import "./pages/Account"

  //Components
  @import './components/MusicControl'
  @import './components/PlaylistRow'
  @import './components/PlaylistList'
  @import './components/ContextMenu'
  @import './components/InputModal'
  @import './components/Seekbar'
  @import './components/React-Async-Popup'
