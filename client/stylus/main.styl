@import "./reset"
@import "sizes"
@import "color"

html
  height 100%
  #root
    height 100%
  body
    font-family 'DejaVuSansCondensed', Helvetica, Arial, sans-serif
    font-weight normal
    font-size 16px
    line-height 1.5em
    height: 100%;
    background-color bodyBackgroundColor
    color #e1e1e1
    .container
      display flex
      min-height "calc(100% - %s)" % headerHeight

a
  text-decoration: none;
  cursor: pointer;
  color white
  &:hover
    color linkHoverColor

.content
  width: "calc(100% - %s)" % sidebarWidth
  margin-left 10px
  position relative
  &::after
    content ''
    display block
    height musicPlayerHeight


//Pages
@import "./pages/Home"
@import "./pages/Search"
@import "./pages/Artist"
@import "./pages/Album"

//Components
@import './components/Header'
@import './components/Sidebar'
@import './components/AlbumDisplay'
@import './components/MusicPlayer'
@import './components/SongBlock'
@import './components/ContextMenu'