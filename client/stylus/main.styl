@import "reset"
@import "sizes"
@import "color.styl" //TODO: Parcel throws error if .styl is missing, but only here... check back in future and create issue if not fixed

html
  height 100%
  #root
    height 100%
    overflow-x hidden
  body
    font-family 'Open Sans', Helvetica, Arial, sans-serif
    font-weight normal
    font-size 16px
    height 100%
    background-color bodyBackgroundColor
    color #e1e1e1
    overscroll-behavior contain
    .container
      display flex
      min-height "calc(100% - %s)" % headerHeight
      position relative
      & > .content
        flex 1
        position relative
        &::after
          content ''
          display block
          height musicPlayerHeight
a
  text-decoration none
  cursor pointer
  color inherit
  &.disabled
   pointer-events none
  &:hover
    color linkHoverColor/* !important*/


