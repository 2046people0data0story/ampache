.musicControl
  position: fixed;
  bottom: 0;
  background-color: gray;
  display: flex;
  width "calc(100% - %s)" % sidebarWidth
  right: 0;
  align-items center
  height musicPlayerHeight
  .controls
    display flex
    flex-direction: column;
    flex 1
    .buttons
      display flex
      img
        width 32px
      .disabled
        pointer-events none
        filter grayscale(1)
  .queueIcon
    height 32px
    margin 0 15px 0 auto
    img
      height 100%