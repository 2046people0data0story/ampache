.artistDisplayContainer //Merge with AlbumDisplay.styl?
  .artistDisplay
    display flex
    color white
    text-align center
    flex-direction column
    outline none
    width 10vw
    min-width 150px
    .imageContainer
      position relative
      display flex
      border 1px solid transparent
      transition 0.2s border
      &:before
        position absolute
        content " "
        height 100%
        width 100%
        background-color black
        transition 0.1s opacity
        opacity 0
      &:hover
        &:before
          opacity 0.5
      img
        width 100%
        height 100%
  &:focus
    .imageContainer
      border 1px solid linkHoverColor
      &:before
        opacity 0.5