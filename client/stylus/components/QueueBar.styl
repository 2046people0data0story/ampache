.queueBar
  width 0
  height "calc(100vh - %s - %s)" % (headerHeight musicPlayerHeight)
  overflow-y scroll
  position sticky
  top 0
  transition 0.2s width
  user-select: none;
  &.visible
    width queueBarWidth
  .title
    text-align center
    font-size 24px
    margin 10px 0
    white-space nowrap
  .songs
    display flex
    flex-direction column
    white-space nowrap
    .song
      display flex
      align-items center
      padding 10px 5px
      transition 0.1s background-color
      cursor pointer
      .imageWrapper
        width 50px
        height 50px
        img
          width 100%
          height 100%
      .songName
        flex 1
        padding-left 5px
        text-overflow ellipsis
        overflow hidden
      &:hover
        background-color linkHoverColor
    & .playing
      background-color #c61011