.queueBar
  width 0
  position sticky
  top 0
  transition 0.2s width
  user-select: none;
  titleHeight = 44px
  &.visible
    width queueBarWidth
  .title
    text-align center
    font-size 24px
    height titleHeight
    box-sizing border-box
    padding 10px 0
    white-space nowrap
  .songs
    height "calc(100vh - %s - %s - %s)" % (headerHeight musicPlayerHeight titleHeight)
    overflow-y scroll
    position sticky
    top 0
    display flex
    flex-direction column
    white-space nowrap
    .song
      display flex
      align-items center
      padding 10px 5px
      transition 0.1s background-color
      cursor pointer
      .imageWrapper
        width 50px
        height 50px
        img
          width 100%
          height 100%
      .songName
        flex 1
        padding-left 5px
        text-overflow ellipsis
        overflow hidden
      &:hover
        background-color linkHoverColor
    & .playing
      background-color #c61011