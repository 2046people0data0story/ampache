.queueBar
  width 0
  transition 0.2s width
  user-select none
  z-index 100
  titleHeight = 44px
  @media all and (max-width: 600px)
    position absolute
    right 0
  &.visible
    width queueBarWidth
    @media all and (max-width: 600px)
      width 100%
      .songs
        padding-bottom: 100px;
        height: 100%;
        position initial
  .title
    text-align center
    font-size 24px
    height titleHeight
    box-sizing border-box
    padding 10px 0
    white-space nowrap
    overflow hidden
  .songs
    height "calc(100vh - %s - %s - %s)" % (headerHeight musicPlayerHeight titleHeight)
    overflow-y scroll
    position sticky
    top 0
    display flex
    flex-direction column
    white-space nowrap
    .song
      display flex
      align-items center
      padding 10px 5px
      transition 0.1s background-color
      cursor pointer
      border 1px solid transparent
      border-bottom 1px solid #696969
      min-height 65px
      .imageWrapper
        max-width 50px
        height 50px
        img
          width 100%
          height 100%
      .details
        flex 1
        overflow hidden
        padding-left 5px
        .songName
          text-overflow ellipsis
          overflow hidden
        .albumArtist
          text-overflow ellipsis
          overflow hidden
          font-size 12px
          color #878787
          .gap
            margin 0 2px
      &:hover
        border  1px solid linkHoverColor
    & .playing
      background-color #c61011