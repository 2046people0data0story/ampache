.songRow
  background-color #4d4d4d
  padding 10px
  display flex
  justify-content space-between
  border 1px solid transparent
  cursor pointer
  .verticleMenu
    width 8px
    background-image url('/images/icons/svg/menu-verticle.svg')
    background-size contain
    margin-right 15px
    &:hover
      filter invert(1)
  & > :not(:first-child)
    flex 1
  & > :last-child
    text-align right
  &:nth-child(odd)
    background-color #333
  &:hover
    color linkHoverColor
    border 1px solid linkHoverColor
  &.playing
    color currentlyPlayingColor
    border 1px solid navajowhite