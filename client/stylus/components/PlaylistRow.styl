.playlistRow
  background-color #4d4d4d
  padding 10px
  display flex
  justify-content space-between
  border 1px solid transparent
  .verticleMenu
    width 8px
    background-image url('/images/icons/svg/menu-verticle.svg')
    background-size contain
    background-repeat no-repeat
    margin-right 15px
    &:hover
      filter invert(1)
  & > :not(:first-child)
    flex 1
    text-align center
  &:nth-child(odd)
    background-color #333
  &:hover
    color linkHoverColor
    border 1px solid linkHoverColor