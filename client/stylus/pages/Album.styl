.albumPage
  .album
    color white
    margin-top 20px
    margin-left 10px
    height 200px
    display flex
    flex-wrap wrap
    .imageContainer
      height inherit
      margin-right: 10px;
      img
        height inherit
    .details
      color white
      .albumName
        font-size 24px
        margin 10px 0
      .artistName
        color #9b9b9b
        font-size 18px
      a
        clear both
        float left
        color inherit
        &:hover
          color linkHoverColor

  .songs
    margin-top 100px
    margin-right 10px