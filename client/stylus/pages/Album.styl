.albumPage
  .album
    color white
    margin-top 20px
    margin-left 10px
    height 200px
    display flex
    flex-wrap wrap
    .imageContainer
      height inherit
      margin-right 10px
      transition background-size 0.1s
      background-size 0
      img
        height inherit
        transition filter 0.2s
      &:hover
        background-image url("/images/icons/svg/circled-play.svg")
        background-size 130px
        background-repeat no-repeat
        background-position center
        cursor pointer
        img
          filter brightness(0.2)
          z-index -1
    .details
      color white
      .albumName
        font-size 24px
        margin 10px 0
      .artistName
        color #9b9b9b
        font-size 18px
      a
        clear both
        float left
        color inherit
        &:hover
          color linkHoverColor

  .songs
    margin-top 100px
    margin-right 10px